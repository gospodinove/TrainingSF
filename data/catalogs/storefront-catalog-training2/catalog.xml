<?xml version="1.0" encoding="UTF-8"?>
<catalog xmlns="http://www.demandware.com/xml/impex/catalog/2006-10-31" catalog-id="storefront-catalog-training2">
    <header>
        <image-settings>
            <internal-location base-path="/"/>
            <view-types>
                <view-type>large</view-type>
                <view-type>medium</view-type>
                <view-type>small</view-type>
                <view-type>swatch</view-type>
            </view-types>
            <alt-pattern>${productname}</alt-pattern>
            <title-pattern>${productname}</title-pattern>
        </image-settings>
    </header>

    <category category-id="root">
        <display-name xml:lang="x-default">storefront-catalog-training-2.0</display-name>
        <online-flag>true</online-flag>
        <template/>
        <page-attributes/>
    </category>

    <category category-id="movies">
        <display-name xml:lang="x-default">Movies</display-name>
        <online-flag>true</online-flag>
        <parent>root</parent>
        <template/>
        <page-attributes/>
    </category>

    <category category-id="action">
        <display-name xml:lang="x-default">Action</display-name>
        <online-flag>true</online-flag>
        <parent>movies</parent>
        <template/>
        <page-attributes/>
    </category>

    <category category-id="comedy">
        <display-name xml:lang="x-default">Comedy</display-name>
        <online-flag>true</online-flag>
        <parent>movies</parent>
        <template/>
        <page-attributes/>
    </category>

    <category-assignment category-id="action" product-id="dune">
        <primary-flag>true</primary-flag>
    </category-assignment>

    <category-assignment category-id="action" product-id="theBatman">
        <primary-flag>true</primary-flag>
    </category-assignment>

    <category-assignment category-id="comedy" product-id="tallGirl">
        <primary-flag>true</primary-flag>
    </category-assignment>

</catalog>
